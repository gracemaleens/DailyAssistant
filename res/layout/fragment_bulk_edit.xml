<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.zes.dailyassistant"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
    <com.zes.dailyassistant.base.GeneralTitleBar 
        android:id="@+id/bulk_edit_generalTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftVisibility="invisible"
        app:title="@string/note_fragment_note"
        app:leftText="@string/note_fragment_edit">
        
    </com.zes.dailyassistant.base.GeneralTitleBar>
    
    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bulk_edit_generalTitleBar" >
    </ListView>

    <TextView
        android:id="@id/android:empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No Data" />

</RelativeLayout>